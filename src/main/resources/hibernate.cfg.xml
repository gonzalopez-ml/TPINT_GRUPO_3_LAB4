<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
    <session-factory>
        <property name="hibernate.connection.driver_class">com.mysql.jdbc.Driver</property>
        <property name="hibernate.connection.password">root</property>
        <property name="hibernate.connection.url">jdbc:mysql://localhost:3306/bdintegrador?createDatabaseIfNotExist=true</property>
        <property name="hibernate.connection.username">root</property>
        <property name="hibernate.dialect">org.hibernate.dialect.MySQLDialect</property>
        <property name="javax.persistence.validation.mode">none</property>
        <property name="show_sql">true</property>
        <property name="hbm2ddl.auto">create</property>

        <mapping class="frgp.utn.edu.ar.entidad.Articulo" />
        <mapping class="frgp.utn.edu.ar.entidad.Cliente" />
        <mapping class="frgp.utn.edu.ar.entidad.DetalleVenta" />
        <mapping class="frgp.utn.edu.ar.entidad.Marca" />
        <mapping class="frgp.utn.edu.ar.entidad.Stock" />
        <mapping class="frgp.utn.edu.ar.entidad.TipoArticulo" />
        <mapping class="frgp.utn.edu.ar.entidad.Usuario" />
        <mapping class="frgp.utn.edu.ar.entidad.Venta" />


    </session-factory>
</hibernate-configuration>
